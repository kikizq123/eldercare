/* pages/record/record.wxss */

.page-header {
  text-align: center;
  padding: 40rpx 30rpx 60rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #666666;
}

/* 表单区域 */
.record-form-card {
  margin-bottom: 30rpx;
}

.form-section {
  margin-bottom: 50rpx;
}

.form-section:last-child {
  margin-bottom: 0;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 30rpx;
}

/* 血压输入区域 */
.bp-input-container {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
}

.bp-input-group {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.bp-input-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
}

.bp-label {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.bp-input {
  width: 140rpx;
  height: 100rpx;
  text-align: center;
  font-size: 56rpx;
  font-weight: bold;
  color: #4A90E2;
  border: 2rpx solid #e6e6e6;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.bp-input:focus {
  border-color: #4A90E2;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.2);
}

.bp-input.error {
  border-color: #ff4757;
  color: #ff4757;
}

.bp-separator {
  font-size: 48rpx;
  color: #666666;
  margin: 0 30rpx;
  margin-top: 60rpx;
  font-weight: bold;
}

.bp-unit {
  font-size: 20rpx;
  color: #999999;
  margin-top: 12rpx;
}

.error-tip {
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #ff4757;
  white-space: nowrap;
}

/* 血压分级显示 */
.bp-level-display {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #ffffff;
  border-radius: 12rpx;
  border: 2rpx solid #e6e6e6;
}

.level-indicator {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.level-info {
  flex: 1;
}

.level-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.level-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

/* 时间选择器 */
.time-picker-container {
  background: #f8f9fa;
  border-radius: 12rpx;
  overflow: hidden;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #e6e6e6;
  background: #ffffff;
}

.picker-item:last-child {
  border-bottom: none;
}

.picker-item:active {
  background: #f8f9fa;
}

.picker-label {
  font-size: 32rpx;
  color: #333333;
}

.picker-value {
  display: flex;
  align-items: center;
  color: #4A90E2;
  font-size: 30rpx;
}

.picker-arrow {
  margin-left: 16rpx;
  color: #cccccc;
}

/* 测量环境 */
.context-section {
  margin-bottom: 30rpx;
}

.context-section:last-child {
  margin-bottom: 0;
}

.context-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
}

.radio-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 24rpx;
  border: 1rpx solid #e6e6e6;
  transition: all 0.2s ease;
}

.radio-item:active {
  background: #e6e6e6;
}

.radio-text {
  font-size: 26rpx;
  color: #333333;
  margin-left: 12rpx;
}

/* 备注区域 */
.notes-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 1rpx solid #e6e6e6;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background: #ffffff;
  box-sizing: border-box;
}

.notes-textarea:focus {
  border-color: #4A90E2;
}

.notes-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999999;
  margin-top: 12rpx;
}

/* 操作按钮 */
.form-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 60rpx;
}

/* 测量建议 */
.tips-card {
  margin-bottom: 30rpx;
  border-left: 6rpx solid #4A90E2;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
}

.tip-dot {
  color: #4A90E2;
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-top: 4rpx;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}

/* 动画效果 */
.bp-input {
  animation: fadeInUp 0.3s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.bp-level-display {
  animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}