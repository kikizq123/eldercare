/**app.wxss**/
/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

/* 适老化设计 - 全局字体放大 */
.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn-primary {
  background: #1890ff;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  border: none;
}

.btn-primary:active {
  background: #096dd9;
}

.btn-secondary {
  background: #f5f5f5;
  color: #333;
  border-radius: 44rpx;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  border: none;
}

.btn-danger {
  background: #ff4d4f;
  color: #fff;
  border-radius: 44rpx;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  border: none;
}

.btn-success {
  background: #52c41a;
  color: #fff;
  border-radius: 44rpx;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  border: none;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
  padding: 30rpx;
}

/* 标题样式 */
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0 20rpx 0;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin: 20rpx 0 40rpx 0;
}

/* 表单样式 */
.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  border: 2rpx solid transparent;
}

.form-input:focus {
  border-color: #1890ff;
  background: #fff;
}

/* 列表样式 */
.list-item {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  color: #999;
  font-size: 32rpx;
  margin: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin: 50rpx 0;
}

/* 适老化 - 增大点击区域 */
.clickable {
  min-height: 88rpx;
  display: flex;
  align-items: center;
}

/* 状态标签 */
.status-tag {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  color: #fff;
}

.status-normal {
  background: #52c41a;
}

.status-warning {
  background: #faad14;
}

.status-danger {
  background: #ff4d4f;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: #f0f0f0;
  margin: 30rpx 0;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #1890ff;
  color: #fff;
  font-size: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.4);
  z-index: 100;
}

/* 模态框遮罩 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

/* 响应式设计 */
@media screen and (max-width: 320px) {
  .container {
    padding: 20rpx;
  }
  
  .section-title {
    font-size: 32rpx;
  }
  
  .form-input {
    height: 80rpx;
    font-size: 30rpx;
  }
}