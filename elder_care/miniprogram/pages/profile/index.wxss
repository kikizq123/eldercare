/* 个人资料卡片 */
.profile-card {
  margin-bottom: 30rpx;
}

.profile-header {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #1890ff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.avatar-text {
  color: #fff;
  font-size: 48rpx;
  font-weight: bold;
}

.profile-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.profile-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.profile-role {
  font-size: 28rpx;
  color: #1890ff;
}

.profile-phone {
  font-size: 28rpx;
  color: #666;
}

.edit-btn {
  background: #f0f0f0;
  color: #666;
  padding: 15rpx 25rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  border: none;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 30rpx;
}

.menu-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.menu-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.menu-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.menu-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.menu-desc {
  font-size: 26rpx;
  color: #666;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 区块样式 */
.section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.add-contact-btn {
  background: #1890ff;
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  border: none;
}

/* 紧急联系人列表 */
.contact-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.contact-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.contact-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.contact-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.contact-phone {
  font-size: 28rpx;
  color: #666;
}

.contact-relationship {
  font-size: 26rpx;
  color: #999;
}

.delete-contact-btn {
  background: #ff4d4f;
  color: #fff;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
}

/* 家庭成员列表 */
.family-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.family-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.family-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #52c41a;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

.family-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.family-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.family-role {
  font-size: 26rpx;
  color: #666;
}

/* 空状态 */
.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 20rpx;
}

/* 退出登录按钮 */
.logout-btn {
  width: 100%;
  height: 88rpx;
  background: #ff4d4f;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 40rpx;
  border: none;
}

/* 弹窗样式 */
.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #333;
}

.form-group {
  margin-bottom: 25rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  border: 2rpx solid transparent;
}

.form-input:focus {
  border-color: #1890ff;
  background: #fff;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  border: none;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #1890ff;
  color: #fff;
} 