.container {
  padding: 20rpx;
}

.section {
  margin-bottom: 40rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.medication-list {
  margin-bottom: 40rpx;
}

.medication-item {
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.medication-info {
  display: flex;
  gap: 30rpx;
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.medication-name {
  font-weight: bold;
  color: #333;
}

.medication-dosage, .medication-frequency {
  color: #666;
}

.medication-schedule {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.schedule-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.taken-btn {
  background: #1aad19;
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
}

.taken-label {
  color: #aaa;
  font-size: 28rpx;
}

.add-btn {
  background: #1890ff;
  color: #fff;
  font-size: 36rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  margin-top: 30rpx;
}

.add-form {
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  padding: 30rpx;
  margin-top: 30rpx;
}

.form-group {
  margin-bottom: 20rpx;
}

.form-group text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-actions {
  display: flex;
  gap: 30rpx;
  margin-top: 30rpx;
}

.submit-btn {
  background: #1890ff;
  color: #fff;
  font-size: 36rpx;
  border-radius: 44rpx;
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
}

.cancel-btn {
  background: #eee;
  color: #333;
  font-size: 36rpx;
  border-radius: 44rpx;
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn:active {
  opacity: 0.8;
} 