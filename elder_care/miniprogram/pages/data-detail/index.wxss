.container {
  padding: 20rpx;
}

.type-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.type-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.type-unit {
  font-size: 28rpx;
  color: #666;
}

/* 图表相关样式 */
.chart-container {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.chart-tabs {
  display: flex;
}

.tab {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  margin-left: 10rpx;
  border-radius: 30rpx;
}

.tab.active {
  background: #1890ff;
  color: #fff;
}

.chart-wrapper {
  height: 400rpx;
  display: flex;
  margin: 30rpx 0;
}

.chart-y-axis {
  width: 60rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
  padding-right: 10rpx;
}

.chart-y-axis text {
  font-size: 24rpx;
  color: #999;
}

.chart-content {
  flex: 1;
  height: 100%;
  border-left: 1px solid #eee;
  border-bottom: 1px solid #eee;
  position: relative;
}

.chart-bars {
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  padding: 0 10rpx;
}

.chart-bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  flex: 1;
}

.chart-bar {
  width: 40rpx;
  background: #1890ff;
  border-radius: 40rpx 40rpx 0 0;
  position: relative;
  display: flex;
  justify-content: center;
}

.chart-bar.abnormal {
  background: #ff4d4f;
}

.chart-value {
  position: absolute;
  top: -40rpx;
  font-size: 24rpx;
  color: #666;
}

.chart-date {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.chart-legend {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}

.legend-color {
  width: 30rpx;
  height: 16rpx;
  margin-right: 10rpx;
  border-radius: 4rpx;
}

.legend-color.normal {
  background: #1890ff;
}

.legend-color.abnormal {
  background: #ff4d4f;
}

.legend-item text {
  font-size: 24rpx;
  color: #666;
}

/* 历史记录列表样式 */
.data-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.list-header {
  border-bottom: 1px solid #eee;
  padding-bottom: 15rpx;
  margin-bottom: 15rpx;
}

.list-header text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.list-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1px solid #f5f5f5;
}

.list-item.abnormal {
  background: #fff1f0;
}

.list-item-left {
  display: flex;
  flex-direction: column;
}

.list-date {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.list-time {
  font-size: 24rpx;
  color: #999;
}

.list-item-right {
  display: flex;
  align-items: center;
}

.list-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.abnormal-tag {
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #fff;
  background: #ff4d4f;
  padding: 4rpx 10rpx;
  border-radius: 20rpx;
}

.share-btn {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  background: #1890ff;
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  z-index: 10;
}
