.container {
  padding: 20rpx;
  font-size: 32rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 20rpx;
  font-size: 36rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 20rpx 0;
  color: #333;
}

.data-list, .medication-list {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.data-item, .medication-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.data-item:last-child, .medication-item:last-child {
  border-bottom: none;
}

.data-type, .medication-name {
  font-weight: bold;
  color: #333;
}

.data-value {
  color: #1aad19;
}

.data-time, .medication-time {
  color: #999;
  font-size: 28rpx;
}

.medication-dosage {
  color: #666;
}

.medication-taken {
  background: #1aad19;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.sos-button {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #ff4d4f;
  color: #fff;
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 36rpx;
  box-shadow: 0 4rpx 12rpx rgba(255,77,79,0.3);
}

.role-info {
  text-align: center;
  color: #888;
  margin: 20rpx 0;
  font-size: 28rpx;
}

.navi-buttons {
  display: flex;
  justify-content: space-around;
  margin: 30rpx 0;
}

.navi-btn {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  width: 40%;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.navi-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.navi-text {
  font-size: 28rpx;
  color: #333;
} 