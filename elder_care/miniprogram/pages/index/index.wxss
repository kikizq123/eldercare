/* 用户信息卡片 */
.user-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: #1890ff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.avatar-text {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-role {
  font-size: 28rpx;
  color: #666;
}

.profile-btn {
  background: #f0f0f0;
  color: #666;
  padding: 15rpx 25rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

/* 快速操作按钮 */
.quick-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  width: calc(50% - 10rpx);
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.action-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 卡片通用样式 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more-btn {
  font-size: 28rpx;
  color: #1890ff;
}

/* 健康数据摘要 */
.health-summary {
  margin-bottom: 30rpx;
}

.health-items {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.health-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.health-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.health-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.health-type {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.health-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.health-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.health-status.normal {
  background: #52c41a;
}

.health-status.abnormal {
  background: #ff4d4f;
}

/* 用药提醒摘要 */
.medication-summary {
  margin-bottom: 120rpx;
}

.medication-items {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.medication-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.med-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.med-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.med-dosage {
  font-size: 26rpx;
  color: #666;
}

.med-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.med-status.taken {
  background: #52c41a;
}

.med-status.pending {
  background: #faad14;
}

/* 空状态提示 */
.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 20rpx;
}

/* 紧急求助按钮 */
.sos-button {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  height: 100rpx;
  background: #ff4d4f;
  color: #fff;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 20rpx rgba(255,77,79,0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  border: none;
}

.sos-icon {
  font-size: 36rpx;
}

.sos-text {
  font-size: 32rpx;
}

/* 重置按钮（开发用） */
.reset-button {
  position: fixed;
  bottom: 160rpx;
  right: 30rpx;
  background: #f0f0f0;
  color: #999;
  font-size: 24rpx;
  padding: 15rpx 25rpx;
  border-radius: 30rpx;
  border: none;
} 