.role-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: #f7f7f7;
}
.role-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
  color: #333;
}
.role-btn {
  width: 80%;
  height: 88rpx;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-bottom: 40rpx;
}
.elder {
  background: #07c160;
  color: #fff;
}
.family {
  background: #1890ff;
  color: #fff;
}
