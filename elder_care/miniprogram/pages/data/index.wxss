.container {
  padding: 30rpx;
  font-size: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 20rpx 0;
  color: #333;
}

.type-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.type-item {
  width: calc(50% - 10rpx);
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.type-item.selected {
  background: #e6f7ff;
  border: 2rpx solid #1890ff;
}

.type-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.type-unit {
  font-size: 28rpx;
  color: #666;
}

.data-form {
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.input-label {
  width: 160rpx;
  font-size: 32rpx;
  color: #333;
}

.input-value {
  flex: 1;
  font-size: 36rpx;
  padding: 10rpx;
  border: none;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.input-unit {
  width: 100rpx;
  text-align: right;
  color: #666;
  font-size: 28rpx;
}

.datetime-section {
  margin: 30rpx 0;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.datetime-group {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 10rpx 0;
}

.datetime-label {
  width: 160rpx;
  font-size: 32rpx;
  color: #333;
}

.datetime-picker {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #333;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

.notes-section {
  margin-top: 40rpx;
}

.notes-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.notes-title {
  font-size: 32rpx;
  color: #333;
}

.notes-icon {
  color: #666;
  font-size: 28rpx;
}

.notes-input {
  width: 100%;
  height: 200rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.submit-btn {
  margin-top: 40rpx;
  background: #1890ff;
  color: #fff;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
}

/* 适老化设计 */
.type-item, .input-group, .notes-header {
  font-size: 36rpx; /* 增大字体 */
}

.input-value {
  font-size: 40rpx; /* 输入框字体更大 */
  padding: 20rpx; /* 增大点击区域 */
}

.submit-btn {
  font-size: 36rpx; /* 按钮字体更大 */
  height: 100rpx; /* 增大按钮高度 */
  line-height: 100rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.view-history {
  margin-left: 20rpx;
  background: #1890ff;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
}

.view-history text {
  color: #fff;
  font-size: 24rpx;
} 