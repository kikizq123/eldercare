.container {
  padding: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 20rpx 0;
  color: #333;
}

.rehab-list {
  margin-bottom: 40rpx;
}

.rehab-item {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.rehab-info {
  flex: 1;
  margin-right: 20rpx;
}

.rehab-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.rehab-frequency {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 5rpx;
}

.rehab-notes {
  font-size: 26rpx;
  color: #999;
  display: block;
}

.rehab-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.checkin-btn {
  background: #1890ff;
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
  padding: 0 25rpx;
  height: 60rpx;
  line-height: 60rpx;
  min-width: 120rpx;
  border: none;
}

.checkin-btn.checked {
  background: #52c41a;
}

.delete-btn {
  background: #ff4d4f;
  color: #fff;
  font-size: 26rpx;
  border-radius: 30rpx;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  min-width: 100rpx;
  border: none;
}

.empty-tip {
  text-align: center;
  color: #999;
  margin: 60rpx 0;
  font-size: 28rpx;
}

.add-btn {
  background: #1890ff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 30rpx;
  width: 90%;
}

.form-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-form {
  width: 90%;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-sizing: border-box;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.form-group {
  margin-bottom: 20rpx;
}

.form-group text {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.cancel-btn, .submit-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #333;
}

.submit-btn {
  background: #1890ff;
  color: #fff;
}
