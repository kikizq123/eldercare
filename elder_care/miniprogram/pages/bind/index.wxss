/* 家人关系绑定页面样式 */
.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

/* 长辈端邀请区域 */
.elder-section {
  margin-bottom: 40rpx;
}

.invite-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.invite-title {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.invite-code {
  font-size: 48rpx;
  font-weight: bold;
  color: #007AFF;
  margin: 30rpx 0;
  letter-spacing: 8rpx;
}

.invite-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.btn-copy, .btn-qr {
  flex: 1;
  background: #007AFF;
  color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.btn-qr {
  background: #34C759;
}

.tips {
  background: #FFF3CD;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-top: 30rpx;
  border-left: 8rpx solid #FFC107;
}

.tips text {
  color: #856404;
  font-size: 28rpx;
  line-height: 1.5;
}

/* 家人端绑定区域 */
.family-section {
  margin-bottom: 40rpx;
}

.bind-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn-scan, .btn-input {
  background: white;
  border: 2rpx solid #007AFF;
  color: #007AFF;
  border-radius: 12rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-scan {
  background: #007AFF;
  color: white;
}

/* 家人列表 */
.family-list {
  margin-top: 40rpx;
}

.member-item {
  background: white;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.member-role {
  font-size: 26rpx;
  color: #666;
}

.btn-unbind {
  background: #FF3B30;
  color: white;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: 90%;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

/* 二维码弹窗 */
.qr-container {
  text-align: center;
  padding: 30rpx;
}

.qr-code {
  width: 400rpx;
  height: 400rpx;
  border: 2rpx solid #eee;
}

.qr-code-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #007AFF;
  text-align: center;
  margin: 20rpx 0;
  letter-spacing: 4rpx;
}

.btn-close {
  background: #007AFF;
  color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  width: 100%;
  margin-top: 20rpx;
}

/* 输入框弹窗 */
.input-container {
  padding: 20rpx 0;
}

.code-input {
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 32rpx;
  text-align: center;
  letter-spacing: 8rpx;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: #007AFF;
  color: white;
}