.container {
  padding: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 20rpx 0;
  color: #333;
}

.medication-list {
  margin-bottom: 40rpx;
}

.medication-item {
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.medication-info {
  flex: 1;
}

.medication-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.medication-dosage, .medication-time {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.medication-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.taken-btn {
  background: #1aad19;
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
}

.taken-btn.checked {
  background: #aaa;
}

.delete-btn {
  background: #ff4d4f;
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  margin: 60rpx 0;
  font-size: 28rpx;
}

.add-btn {
  background: #1890ff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 30rpx;
  width: 90%;
}

.form-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-form {
  width: 90%;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-sizing: border-box;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.form-group {
  margin-bottom: 20rpx;
}

.form-group text {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.cancel-btn, .submit-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #333;
}

.submit-btn {
  background: #1890ff;
  color: #fff;
}

.share-btn {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  background: #1890ff;
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  z-index: 10;
}

.time-options {
  display: flex;
  gap: 30rpx;
  margin-bottom: 10rpx;
}

.time-btn {
  min-width: 80rpx;
  padding: 10rpx 24rpx;
  border-radius: 24rpx;
  background: #f5f5f5;
  color: #333;
  font-size: 28rpx;
  text-align: center;
  border: none;
  cursor: pointer;
  transition: background 0.2s, color 0.2s;
}

.time-btn.selected {
  background: #1890ff !important;
  color: #fff !important;
  border: none !important;
  font-weight: normal;
}

.reminder-time-btn {
  min-width: 80rpx;
  padding: 10rpx 24rpx;
  border-radius: 24rpx;
  background: #f5f5f5;
  color: #333;
  font-size: 28rpx;
  text-align: center;
  border: none;
  cursor: pointer;
  transition: background 0.2s, color 0.2s;
  display: inline-block;
}

.reminder-time-btn.selected {
  background: #1890ff;
  color: #fff;
  border: none;
  font-weight: normal;
}

.reminder-time-btn-checked {
  background: #1890ff;
  color: #fff;
  border: none;
  font-weight: normal;
}
